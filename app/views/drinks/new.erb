<h2>Add Another Drink!</h2>


<form action="/drinks" method="POST">
	<label name="name">Name</label>
	<input type="text" name="name" id="name"><br><br>

	<label name="ingredients">Ingredients</label>
	<input type="text" name="ingredients" id="ingredients"><br><br>

	<label name="bar">Assign to a Bar</label><br>
	<% @bars.each do |bar| %>
		<input id="<%=bar.name %>" type="radio" name="bar" value="<%=bar.id%>"><%= bar.name %></input><br>
	<% end %>

	<br>

	<input type="submit" value="Submit">


</form>